<div class="card mb-3 js-authMethod" data-method="smart-id" data-country="<%= country %>">
    <div class="card-body">
        <h5 class="card-title">Smart-ID</h5>
        <div class="js-authMethod_error alert alert-danger d-none"></div>
        <form action="" class="js-authMethod_form">
            <div class="mb-3">
                <label for="idcode-<%= country %>" class="form-label">Personal Identification Code</label>
                <input id="idcode-<%= country %>" name="idcode" type="text" class="form-control">
            </div>
            <button type="submit" class="btn btn-dark">Authenticate</button>
            <a href="#" class="btn btn-link js-authMethod_cancel">Cancel</a>
        </form>
    </div>
</div>
