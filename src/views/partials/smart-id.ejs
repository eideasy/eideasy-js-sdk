<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Smart-ID</h5>
        <form action="" id="authWithSmartId">
            <div class="form-group">
                <label for="idcode">Personal Identification Code</label>
                <input id="idcode" name="idcode" type="text" class="form-control">
                <input type="radio" name="countryCode" value="EE" id="countryCodeEE" checked>
                <label for="countryCodeEE">EE</label>
                <input type="radio" name="countryCode" value="LV" id="countryCodeLV">
                <label for="countryCodeLV">LV</label>
                <input type="radio" name="countryCode" value="LT" id="countryCodeLT">
                <label for="countryCodeLT">LT</label>
            </div>
            <button type="submit" class="btn btn-primary">Authenticate</button>
            <a href="#" id="cancelSmartId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
